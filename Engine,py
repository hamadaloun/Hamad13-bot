        news_text = ""
        if info["news"]:
            head = info["news"][0].get("headline", "")
            news_text = f"\nğŸ“° Ø®Ø¨Ø±: {head[:200]}"

        return (
            f"ğŸš¨ ØªÙ†Ø¨ÙŠÙ‡ â€” Ø³Ù‡Ù… Ù‚ÙˆÙŠ (PRO)\n\n"
